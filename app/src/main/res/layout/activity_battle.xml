<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BattleActivity">

    <TextView
        android:id="@+id/enemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enemyHealth"
        android:layout_marginTop="30dp"
        android:text="Enemy Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/enemyIcon"
        android:layout_width="141dp"
        android:layout_height="191dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/enemyName"
        android:layout_marginEnd="34dp"
        app:srcCompat="@drawable/dragonhead" />

    <TextView
        android:id="@+id/enemyHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enemyLevel"
        android:layout_marginTop="70dp"
        android:text="Health: 80" />

    <TextView
        android:id="@+id/enemyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/enemyName"
        android:layout_alignTop="@+id/enemyHealth"
        android:text="Type: Fire" />

    <TextView
        android:id="@+id/enemyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="101dp"
        android:text="Level 60" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/enemyLevel"
        android:layout_below="@+id/enemyIcon"
        android:text="Player:" />

    <TextView
        android:id="@+id/playerHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:text="Health: 35" />

    <TextView
        android:id="@+id/playerMana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playerHealth"
        android:layout_below="@+id/playerLevel"
        android:text="Mana: 90" />

    <TextView
        android:id="@+id/playerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playerHealth"
        android:layout_below="@+id/playerHealth"
        android:text="Level: " />

    <Button
        android:id="@+id/pButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:onClick="onBasicAttack"
        android:text="Physical Attack" />

    <Button
        android:id="@+id/cButton"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="36dp"
        android:onClick="onSpellAttack"
        android:text="Cast a Spell" />

    <Button
        android:id="@+id/rButton"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enemyIcon"
        android:layout_alignTop="@+id/pButton"
        android:onClick="onRunAway"
        android:text="Run Away" />

    <Button
        android:id="@+id/iButton"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/enemyIcon"
        android:layout_alignTop="@+id/cButton"
        android:onClick="onItem"
        android:text="Item" />

    <TextView
        android:id="@+id/battleDescription"
        android:layout_width="136dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/enemyIcon"
        android:layout_below="@+id/playerName"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="213dp"
        android:text="Event Log:" />

    <TextView
        android:id="@+id/turnText"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:text="Your move!"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/spellButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/pButton"
        android:layout_marginBottom="62dp"
        android:onClick="onSpellCast1"
        android:text="Button"
        android:visibility="invisible" />

    <Button
        android:id="@+id/spellButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spellButton1"
        android:layout_centerHorizontal="true"
        android:onClick="onSpellCast2"
        android:text="Button"
        android:visibility="invisible" />

    <Button
        android:id="@+id/spellButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spellButton1"
        android:layout_alignEnd="@+id/enemyIcon"
        android:onClick="onSpellCast3"
        android:text="Button"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/enemyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enemyType"
        android:layout_alignTop="@+id/enemyLevel"
        android:text="Status: Fine" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enemyName"
        android:layout_marginTop="147dp"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/playerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playerName"
        android:layout_below="@+id/playerMana"
        android:text="Status: Fine" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BattleActivity">

    <TextView
        android:id="@+id/enemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enemyHealth"
        android:layout_marginTop="30dp"
        android:text="Enemy Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="191dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/enemyName"
        android:layout_marginEnd="34dp"
        app:srcCompat="@drawable/dragonhead" />

    <TextView
        android:id="@+id/enemyHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enemyLevel"
        android:layout_marginTop="70dp"
        android:text="Health: 80" />

    <TextView
        android:id="@+id/enemyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/enemyName"
        android:layout_alignTop="@+id/enemyHealth"
        android:text="Type: Fire" />

    <TextView
        android:id="@+id/enemyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="101dp"
        android:text="Level 60" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/enemyLevel"
        android:layout_below="@+id/imageView"
        android:text="Player:" />

    <TextView
        android:id="@+id/playerHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:text="Health: 35" />

    <TextView
        android:id="@+id/playerMana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playerHealth"
        android:layout_below="@+id/playerDefense"
        android:text="Mana: 90" />

    <TextView
        android:id="@+id/playerDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playerHealth"
        android:layout_below="@+id/playerHealth"
        android:text="Defense: 50" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:onClick="onBasicAttack"
        android:text="Physical Attack" />

    <Button
        android:id="@+id/button5"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="36dp"
        android:onClick="onSpellAttack"
        android:text="Cast a Spell" />

    <Button
        android:id="@+id/button6"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/button4"
        android:onClick="onRunAway"
        android:text="Run Away" />

    <Button
        android:id="@+id/button7"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignTop="@+id/button5"
        android:onClick="onItem"
        android:text="Item" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="136dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/textView6"
        android:text="Events that happen in the battle go here" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="213dp"
        android:text="Battle Text" />
</RelativeLayout>
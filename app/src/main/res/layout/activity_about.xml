<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@drawable/stonewall"
    android:id="@+id/relativeLayout3">

    <TextView
        android:id="@+id/playerHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Health: 40 / 200"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/playerMana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Mana: 60 / 100"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/playerHealth"
        app:layout_constraintTop_toBottomOf="@+id/playerHealth" />

    <TextView
        android:id="@+id/playerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="Level: 3"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerHealth" />

    <Button
        android:id="@+id/button8"
        android:layout_width="382dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="176dp"
        android:background="#00000000"
        android:fontFamily="@font/medievalsharp"
        android:onClick="onSetSpells"
        android:paddingLeft="175px"
        android:text="Set Spells"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Character Stats"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/playerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Status: None"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/playerHealth"
        app:layout_constraintTop_toBottomOf="@+id/playerMana" />

    <TextView
        android:id="@+id/playerGold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold: 50g"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/playerLevel"
        app:layout_constraintTop_toTopOf="@+id/playerStatus" />

    <Button
        android:id="@+id/recoverButton"
        android:layout_width="384dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="#00000000"
        android:onClick="onRecoverAtIn"
        android:paddingLeft="200px"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <TextView
        android:id="@+id/playerExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp: 50"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/playerLevel"
        app:layout_constraintTop_toTopOf="@+id/playerMana" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="289dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Created by Dylan Alvarez"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recoverButton" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/recoverButton"
        app:layout_constraintEnd_toEndOf="@+id/recoverButton"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recoverButton"
        app:srcCompat="@drawable/castle" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button8"
        app:srcCompat="@drawable/spellbook" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="198dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Recover at the castle (costs 250 gold)"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recoverButton"
        app:layout_constraintEnd_toEndOf="@+id/recoverButton"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/recoverButton" />
</android.support.constraint.ConstraintLayout>